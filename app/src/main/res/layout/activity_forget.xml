<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ForgetActivity"
    android:background="@drawable/loading_bg"
    android:orientation="vertical">
    <include layout="@layout/activity_base"></include>

    <ImageView
        android:id="@+id/iv_pg"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="25dp"
        android:src="@drawable/logo"></ImageView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"/>

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TableRow >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="用户名："
                    android:textSize="20sp"
                    android:textColor="@color/black"/>

                <EditText
                    android:id="@+id/user_id"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:hint="请输入用户名/手机号/邮箱"
                    android:dropDownHorizontalOffset="40dp"
                    android:completionThreshold="1"
                    android:dropDownHeight="200dp"
                    android:padding="10dp"
                    android:textColor="@color/welcome_bg"
                    android:textSize="20sp"
                    android:background="@null"
                    android:textCursorDrawable="@drawable/cursor_color"/>
            </TableRow>

            <TableRow >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="验证码："
                    android:textSize="20sp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/yanzhen"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:text="237482"
                    android:textSize="20sp"
                    android:textColor="@color/black"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="请输入："
                    android:textSize="20sp"
                    android:textColor="@color/black"/>
                <EditText
                    android:id="@+id/yanzhen_input"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:hint="请输入验证码"
                    android:dropDownHorizontalOffset="40dp"
                    android:completionThreshold="1"
                    android:dropDownHeight="200dp"
                    android:padding="10dp"
                    android:textColor="@color/welcome_bg"
                    android:textSize="20sp"
                    android:background="@null"
                    android:textCursorDrawable="@drawable/cursor_color"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="新密码："
                    android:textSize="20sp"
                    android:textColor="@color/black"/>
                <EditText
                    android:id="@+id/pwd_new"
                    android:hint="请输入新密码"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:dropDownHorizontalOffset="40dp"
                    android:completionThreshold="1"
                    android:dropDownHeight="200dp"
                    android:padding="10dp"
                    android:textColor="@color/welcome_bg"
                    android:textSize="20dp"
                    android:background="@null"
                    android:textCursorDrawable="@drawable/cursor_color"/>
            </TableRow>

            <TableRow
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="60dp">


                <LinearLayout
                    >
                    <Button
                        android:id="@+id/putup"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_marginTop="20dp"
                        android:background="@color/loading_btn_bg"
                        android:textSize="27dp"
                        android:textColor="@color/welcome_bg"
                        android:text="提交" />
                </LinearLayout>
            </TableRow>
        </TableLayout>

    </LinearLayout>

</LinearLayout>