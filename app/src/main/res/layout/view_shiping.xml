<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/write"
            android:gravity="top"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/wellcome_start_bg"
                android:backgroundTint="#F1F1F1"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:cursorVisible="false"
                        android:hint="大家都在搜：粥"
                        android:background="@null"></EditText>
                </RelativeLayout>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="7dp"
                    android:src="@drawable/search" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sp_tuijian"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@color/write"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:text="推荐"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/sp_shucai"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@color/write"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:text="蔬菜"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/sp_hongpei"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@color/write"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:text="烘焙"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/sp_jianfeican"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@color/write"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:text="减肥"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/sp_xiaojiqiao"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@color/write"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:text="技巧"
                    android:textColor="#000000"
                    android:textSize="16sp" />
            </LinearLayout>

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/spviewpager"
                android:layout_width="wrap_content"
                android:layout_height="1200dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>