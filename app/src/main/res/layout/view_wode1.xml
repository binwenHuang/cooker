<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:background="@color/write"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical"
                android:background="@drawable/youxiangbeijin"
                android:gravity="center">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/dongtai"
                    android:layout_margin="5dp">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="奥特曼"
                    android:textSize="17sp"
                    android:textColor="#000000">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="#ffffff">
                <RelativeLayout
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_centerHorizontal="true"
                        android:id="@+id/wd_fabu_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:onClick="onClick">
                    </TextView>

                    <TextView
                        android:layout_marginTop="20dp"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onClick"
                        android:text="发布"
                        android:textColor="#000000"
                        android:textSize="16sp">
                    </TextView>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/wd_shoucang_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="0"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:onClick="onClick">
                    </TextView>

                    <TextView
                        android:layout_marginTop="20dp"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onClick"
                        android:text="收藏"
                        android:textColor="#000000"
                        android:textSize="16sp">
                    </TextView>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/wd_guanzhu_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="0"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:onClick="onClick">
                    </TextView>

                    <TextView
                        android:layout_marginTop="20dp"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onClick"
                        android:text="关注"
                        android:textColor="#000000"
                        android:textSize="16sp">
                    </TextView>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/wd_fensi_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="0"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:onClick="onClick">
                    </TextView>

                    <TextView
                        android:layout_marginTop="20dp"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onClick"
                        android:text="粉丝"
                        android:textColor="#000000"
                        android:textSize="16sp">
                    </TextView>
                </RelativeLayout>

            </LinearLayout>

            <ImageView
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@color/auto_bg"
                >
            </ImageView>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="5dp"
                android:background="#ffffff">

                <RelativeLayout
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_centerHorizontal="true"
                        android:id="@+id/photo"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/dongtai">
                    </ImageView>

                    <TextView
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onClick"
                        android:text="我的相册"
                        android:layout_marginTop="55dp"
                        android:textColor="#000000"
                        android:textSize="14dp">
                    </TextView>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_centerHorizontal="true"
                        android:id="@+id/zan"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/dongtai">
                    </ImageView>

                    <TextView
                        android:layout_centerHorizontal="true"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onClick"
                        android:text="赞/收藏"
                        android:layout_marginTop="55dp"
                        android:textColor="#000000"
                        android:textSize="14dp">
                    </TextView>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_centerHorizontal="true"
                        android:id="@+id/liulan"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/dongtai">
                    </ImageView>

                    <TextView
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:onClick="onClick"
                        android:text="浏览记录"
                        android:layout_marginTop="55dp"
                        android:textColor="#000000"
                        android:textSize="14dp">
                    </TextView>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_centerHorizontal="true"
                        android:id="@+id/caogao"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/dongtai">
                    </ImageView>

                    <TextView
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onClick"
                        android:text="草稿箱"
                        android:layout_marginTop="55dp"
                        android:textColor="#000000"
                        android:textSize="14dp">
                    </TextView>
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="5dp"
                android:background="#ffffff">

                <RelativeLayout
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_centerHorizontal="true"
                        android:id="@+id/qianbao"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/dongtai">
                    </ImageView>

                    <TextView
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:onClick="onClick"
                        android:text="我的钱包"
                        android:layout_marginTop="55dp"
                        android:textColor="#000000"
                        android:textSize="14dp">
                    </TextView>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_centerHorizontal="true"
                        android:id="@+id/chuangzuo"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/dongtai">
                    </ImageView>

                    <TextView
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:onClick="onClick"
                        android:text="创作中心"
                        android:layout_marginTop="55dp"
                        android:textColor="#000000"
                        android:textSize="14dp">
                    </TextView>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_centerHorizontal="true"
                        android:id="@+id/fensitoutiao"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/dongtai">
                    </ImageView>

                    <TextView
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:onClick="onClick"
                        android:text="粉丝头条"
                        android:layout_marginTop="55dp"
                        android:textColor="#000000"
                        android:textSize="14dp">
                    </TextView>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_centerHorizontal="true"
                        android:id="@+id/kefu"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/dongtai">
                    </ImageView>

                    <TextView
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:onClick="onClick"
                        android:text="客服"
                        android:layout_marginTop="55dp"
                        android:textColor="#000000"
                        android:textSize="14dp">
                    </TextView>
                </RelativeLayout>

            </LinearLayout>

            <ImageView
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:src="@color/light"
                >
            </ImageView>

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="5dp"
                android:background="#ffffff">

                <ImageView
                    android:layout_marginTop="4dp"
                    android:id="@+id/a"
                    android:layout_marginLeft="5dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/dongtai">
                </ImageView>
                <TextView
                    android:layout_marginLeft="2dp"
                    android:layout_toRightOf="@+id/a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微公益"
                    android:textSize="20dp">
                </TextView>

                <LinearLayout
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="5dp"
                    android:background="#ffffff">

                    <RelativeLayout
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_centerHorizontal="true"

                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:src="@drawable/dongtai">
                        </ImageView>

                        <TextView
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="onClick"
                            android:text="我的相册"
                            android:layout_marginTop="100dp"
                            android:textColor="#000000"
                            android:textSize="14dp">
                        </TextView>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_centerHorizontal="true"

                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:src="@drawable/dongtai">
                        </ImageView>

                        <TextView
                            android:layout_centerHorizontal="true"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="onClick"
                            android:text="赞/收藏"
                            android:layout_marginTop="100dp"
                            android:textColor="#000000"
                            android:textSize="14dp">
                        </TextView>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_centerHorizontal="true"

                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:src="@drawable/dongtai">
                        </ImageView>

                        <TextView
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:onClick="onClick"
                            android:text="浏览记录"
                            android:layout_marginTop="100dp"
                            android:textColor="#000000"
                            android:textSize="14dp">
                        </TextView>
                    </RelativeLayout>
                </LinearLayout>

            </RelativeLayout>

            <ImageView
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="9dp"
                android:src="@color/light"
                >
            </ImageView>

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="5dp"
                android:background="#ffffff">

                <ImageView
                    android:layout_marginTop="4dp"
                    android:id="@+id/b"
                    android:layout_marginLeft="5dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/dongtai">
                </ImageView>
                <TextView
                    android:layout_marginLeft="2dp"
                    android:layout_toRightOf="@+id/b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关注检测"
                    android:textSize="20dp">
                </TextView>

                <LinearLayout
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="5dp"
                    android:background="#ffffff">

                    <RelativeLayout
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_centerHorizontal="true"

                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:src="@drawable/dongtai">
                        </ImageView>

                        <TextView
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="onClick"
                            android:text="关注检测"
                            android:layout_marginTop="100dp"
                            android:textColor="#000000"
                            android:textSize="14dp">
                        </TextView>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_centerHorizontal="true"

                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:src="@drawable/dongtai">
                        </ImageView>

                        <TextView
                            android:layout_centerHorizontal="true"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="onClick"
                            android:text="查看沉寂用户"
                            android:layout_marginTop="100dp"
                            android:textColor="#000000"
                            android:textSize="14dp">
                        </TextView>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_centerHorizontal="true"

                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:src="@drawable/dongtai">
                        </ImageView>

                        <TextView
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:onClick="onClick"
                            android:text="最热用户"
                            android:layout_marginTop="100dp"
                            android:textColor="#000000"
                            android:textSize="14dp">
                        </TextView>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>


            <TextView
                android:background="@color/light"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="更多功能卡片"
                android:textColor="@color/wait_bg"
                android:textSize="18dp">
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/dongtai">
                </ImageView>

                <TextView
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="免流量"
                    android:textSize="18dp">
                </TextView>

                <TextView
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="流量免费任性玩"
                    android:textColor="@color/grey"
                    android:textSize="15dp">
                </TextView>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>